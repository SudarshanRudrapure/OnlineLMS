Remove-Item -Recurse -Force "C:\Tomcat\apache-tomcat-10.1.44\webapps\OnlineLMS" -ErrorAction SilentlyContinue
Remove-Item -Recurse -Force "C:\Tomcat\apache-tomcat-10.1.44\work\Catalina\localhost\OnlineLMS" -ErrorAction SilentlyContinue
cd C:\OnlineLMS\src
javac -cp "C:\Tomcat\apache-tomcat-10.1.44\lib\*;C:\OnlineLMS\WebContent\WEB-INF\lib\*;." -d C:\OnlineLMS\WebContent\WEB-INF\classes com\lms\*.java
New-Item -ItemType Directory -Force -Path "C:\Tomcat\apache-tomcat-10.1.44\webapps\OnlineLMS" | Out-Null
Copy-Item -Recurse -Force "C:\OnlineLMS\WebContent\*" "C:\Tomcat\apache-tomcat-10.1.44\webapps\OnlineLMS\"
cd C:\Tomcat\apache-tomcat-10.1.44\bin
.\startup.bat



