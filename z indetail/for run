# Compile
cd C:\OnlineLMS\src
javac -cp "C:\Tomcat\apache-tomcat-10.1.44\lib\*;C:\OnlineLMS\WebContent\WEB-INF\lib\*;." -d C:\OnlineLMS\WebContent\WEB-INF\classes com\lms\*.java

# Deploy
xcopy /E /I /Y "C:\OnlineLMS\WebContent" "C:\Tomcat\apache-tomcat-10.1.44\webapps\OnlineLMS"

# Run Tomcat
C:\Tomcat\apache-tomcat-10.1.44\bin\startup.bat
